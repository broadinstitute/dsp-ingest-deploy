{{with $svc := env "SERVICE"}}
kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: {{$svc}}-use-pod-security-policy
subjects:
  - kind: ServiceAccount
    name: {{$svc}}-sa
roleRef:
  kind: Role
  name: use-pod-security-policy-role
  apiGroup: rbac.authorization.k8s.io
{{end}}
