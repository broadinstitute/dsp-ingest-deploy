{{with $svc := env "SERVICE"}}
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: {{$svc}}
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: {{$svc}}
    spec:
      serviceAccountName: {{$svc}}-sa
      initContainers:
        - name: {{$svc}}-config
          image: us.gcr.io/{{env "GOOGLE_PROJECT"}}/cloudsql-proxy-config:ab0a48a
          imagePullPolicy: Always
          env:
            - name: ENVIRONMENT
              value: {{env "ENVIRONMENT"}}
            - name: VAULT_TOKEN_FILE
              value: /etc/vault/token
          volumeMounts:
            - name: token
              mountPath: /etc/vault
            - name: appdir
              mountPath: /working
      containers:
        - name: {{$svc}}
          image: b.gcr.io/cloudsql-docker/gce-proxy:latest
          imagePullPolicy: Always
          command: [ "/bin/sh", "/etc/entrypoint.sh" ]
          ports:
            - name: db-port
              containerPort: 5432
          resources:
            requests:
              cpu: 10m
              memory: 16Mi
            limits:
              memory: 24Mi
          readinessProbe:
            tcpSocket:
              port: 5432
            timeoutSeconds: 1
          volumeMounts:
            - name: appdir
              mountPath: /secrets/cloudsql/credentials.json
              subPath: cloudsql-proxy/cloudsql-proxy-sa.json
              readOnly: true
            - name: appdir
              mountPath: /etc/entrypoint.sh
              subPath: cloudsql-proxy/entrypoint.sh
      volumes:
        - name: token
          secret:
            secretName: vault-token
            items:
              - key: token
                path: token
                mode: 0444
        - name: appdir
          emptyDir: {}
{{end}}
