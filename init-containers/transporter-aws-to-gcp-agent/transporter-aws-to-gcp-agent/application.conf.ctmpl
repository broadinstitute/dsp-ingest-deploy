{{with $aws_secrets_path := env "AWS_SECRETS_PATH"}}
{{with $s3_secret := vault $aws_secrets_path}}
org.broadinstitute.transporter {

    queue {
        manager-uri = "http://transporter-manager.{{$environment}}:8080"
        queue-name = "biogen"
    }

    kafka {
        bootstrap-servers = ["bootstrap.{{$environment}}:9092"]
        application-id = "biogen-aws-to-gcp-agent"
    }

    runner-config {
        aws {
            access-key-id = "{{$s3_secret.Data.aws_access_key_id}}"
            secret-access-key = "{{$s3_secret.Data.aws_secret_access_key}}"
        }

        gcp {
            service-account-json = "/secrets/gcs/credentials.json"
        }
    }
}
{{end}}{{end}}
